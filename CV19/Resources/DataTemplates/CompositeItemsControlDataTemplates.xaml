<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:decanat="clr-namespace:CV19.Models.Decanat"
	xmlns:sys="clr-namespace:System;assembly=System.Runtime">

	<DataTemplate DataType="{x:Type decanat:Group}">
		<TextBlock
			HorizontalAlignment="Center"
			VerticalAlignment="Center"
			FontSize="40"
			Text="{Binding Name, StringFormat=Группа: {0}}" />
	</DataTemplate>
	<DataTemplate DataType="{x:Type decanat:Student}">
		<TextBlock
			HorizontalAlignment="Center"
			VerticalAlignment="Center"
			FontSize="40"
			Text="{Binding Name, StringFormat=Студент: {0}}" />
	</DataTemplate>
	<DataTemplate DataType="{x:Type sys:String}">
		<TextBlock
			HorizontalAlignment="Center"
			VerticalAlignment="Center"
			FontSize="40">
			<Run FontWeight="Bold" Foreground="Aqua">Строка:</Run>
			<TextBlock Text="{Binding}" />
		</TextBlock>
	</DataTemplate>
	<DataTemplate DataType="{x:Type sys:Int32}">
		<TextBlock
			HorizontalAlignment="Center"
			VerticalAlignment="Center"
			FontSize="40">
			Число:
			<TextBlock Text="{Binding}" />
		</TextBlock>
	</DataTemplate>

</ResourceDictionary>