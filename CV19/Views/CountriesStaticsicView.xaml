<UserControl
	x:Class="CV19.Views.CountriesStaticsicView"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:CV19"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	d:DesignHeight="450"
	d:DesignWidth="800"
	Background="#FFA0F1DF"
	mc:Ignorable="d">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="Auto" />
			<ColumnDefinition Width="2*" />
		</Grid.ColumnDefinitions>

		<GridSplitter
			Grid.Column="1"
			VerticalAlignment="Stretch" />

		<GroupBox Grid.Column="0" Header="Список стран">
			<ListBox Background="#FFA0F1DF" />
		</GroupBox>

		<GroupBox Grid.Column="2" Header="Информация">
			<Grid>
				<Grid.RowDefinitions>
					<RowDefinition />
					<RowDefinition Height="Auto" />
					<RowDefinition />
				</Grid.RowDefinitions>

				<GridSplitter
					HorizontalAlignment="Stretch"
					Grid.Row="1" />

				<ListBox Grid.Row="0" Background="#FFA0F1DF" />

				<ListBox Grid.Row="2" Background="#FFA0F1DF" />

			</Grid>
		</GroupBox>

	</Grid>
</UserControl>
